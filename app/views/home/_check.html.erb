                    <span class="subscription-form-submit">
                    <%= submit_tag 'Проверить', class: "btn btn-primary btn-lg", 'data-loading-text' => "Action Button" %>
                    </span>
                  </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
