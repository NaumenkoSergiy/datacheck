      <div class="container">
        <div class="hero-content">
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <div class="hero-heading" data-animation="fadeIn">
                <h1 class="hero-title">Проверка подлинности товаров</h1>
                <p class="hero-tagline">Заградотряд ваших репутационных и финансовых потерь</p>
              </div>
              
              <div class="row">
                <div class="col-md-10 col-md-offset-1">
                  <!-- SUBSCRIPTION FORM -->
                  <%= form_tag codes_check_path, remote: true, method: :post do %>
                  <div class="form-group subscription-form-wrapper">
                    <span class="subscription-form-input">
                      <input name="code" id="scode" class="code form-control form-control-lg" placeholder="Введите код" autocomplete="off">
