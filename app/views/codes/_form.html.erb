<%= form_for @code, :html => { :class => "form-horizontal code" } do |f| %>

    <% if @code.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@code.errors.count, "error") %> prohibited this code from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @code.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :code_type_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code_type_id, :class => 'form-control' %>
    </div>
    <%= error_span(@code[:code_type_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :order_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :order_id, :class => 'form-control' %>
    </div>
    <%= error_span(@code[:order_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%= error_span(@code[:code]) %>
  </div>
  <div class="control-group">
    <%= f.label :request_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :request_id, :class => 'form-control' %>
    </div>
    <%= error_span(@code[:request_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            codes_path, :class => 'btn btn-default' %>

<% end %>
