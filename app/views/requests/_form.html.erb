<%= form_for @request, :html => { :class => "form-horizontal request" } do |f| %>

    <% if @request.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@request[:date]) %>
  </div>
  <div class="control-group">
    <%= f.label :ip_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ip_address, :class => 'form-control' %>
    </div>
    <%= error_span(@request[:ip_address]) %>
  </div>
  <div class="control-group">
    <%= f.label :code_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code_id, :class => 'form-control' %>
    </div>
    <%= error_span(@request[:code_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :passed, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :passed, :class => 'form-control' %>
    </div>
    <%= error_span(@request[:passed]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            requests_path, :class => 'btn btn-default' %>

<% end %>
